<section class="madlib-container">
	<section class="madlib-header row">
		<div class="madlib-title small-12 columns">
			<h1>Mad Libs</h1>
			<h2>Let's get silly... or some other subtitle</h2>
		</div>
	</section>

<%= form_tag(create_path, :method=>'post', :multipart => true) do %>

	<section class="madlib-form row">
		<div class="small-12 medium-6 columns">
			<h3>Step #1:</h3>
		</div>
		<div class="small-12 medium-6 columns">
			<h4>Choose your Madlib style</h4>
			  <%= select_tag("type", options_for_select([['Scary', '1'],
['Funny', '2'],['Standard','3']], '1')) %>
			  
		</div>
		<div class="small-12 columns">
			<hr>
		</div>
	</section>
	<section class="madlib-form">
		<div class="small-12 columns">
			<h3>Step #2:</h3>
			<p>Fill out the below adjectives, nouns, adverbs and verbs accordingly.</p>
		</div>
		
		<!-- repeat as necessary -->
		  <div class="row">
		    <div class="medium-6 columns">
		      
		      <%= label_tag(:verb, "Input Verb") %>
		      <%= text_field_tag(:verb) %>
		    </div>
		    <div class="medium-6 columns">
		      <%= label_tag(:verb, "Input Verb") %>
		      <%= text_field_tag(:verb) %>
		    </div>
		  </div>
		<!-- end repeat -->
		<!-- submit -->
			<div class="small-12 columns">
				<hr>
			</div>
			<div class="small-12 columns">
				<h3>Step #3:
				Generate MadLib
				</h3>
				<%= submit_tag "Save", :class => 'large button'%>
			</div>
		<% end %>
	</section>
</section>